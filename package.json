{
  "name": "avastar-2020-frontend",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.4.1",
    "@testing-library/user-event": "^7.2.1",
    "classnames": "^2.2.6",
    "miragejs": "^0.1.35",
    "node-sass": "^4.13.1",
    "oidc-client": "^1.10.1",
    "prop-types": "^15.7.2",
    "react": "^16.12.0",
    "react-app-rewire-hot-loader": "^2.0.1",
    "react-app-rewired": "^2.1.5",
    "react-dom": "^16.12.0",
    "react-dropzone": "^10.2.1",
    "react-hot-loader": "^4.12.19",
    "react-redux": "^7.2.0",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.4.0",
    "react-yandex-maps": "^4.2.0",
    "redux": "^4.0.5",
    "redux-oidc": "^4.0.0-beta1",
    "redux-saga": "^1.1.3",
    "rtcmulticonnection": "^3.7.0",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-react": "^0.88.2"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.3",
    "eslint": "^6.8.0",
    "eslint-config-sh-react": "git+https://git@gitlab.smarthead.ru/frontend-public/eslint-config-sh-react.git",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.19.0",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.8",
    "stylelint": "^13.2.1",
    "stylelint-config-sh": "git+https://git@gitlab.smarthead.ru/frontend-public/stylelint-config-sh.git",
    "stylelint-order": "^4.0.0",
    "stylelint-scss": "^3.14.2"
  },
  "scripts": {
    "start": "react-app-rewired start",
    "build": "env-cmd -f .env.production react-app-rewired build",
    "build:prod": "react-app-rewired build",
    "build:stage": "env-cmd -f .env.staging react-app-rewired build",
    "test": "react-app-rewired test",
    "eject": "react-app-rewired eject",
    "lint": "npm run lint:css && npm run lint:js",
    "lint:css": "stylelint --quiet --color --allow-empty-input \"src/**/*.{css,scss}\"",
    "lint:css:fix": "stylelint --quiet --color --allow-empty-input --fix --config .stylelintrc-extended \"src/**/*.{css,scss}\"",
    "lint:js": "eslint --quiet --color --no-error-on-unmatched-pattern ./src --ext .js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.js": "npm run lint:js",
    "src/**/*.{css,scss}": "npm run lint:css:fix"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all",
      "not ie 11",
      "not iOS < 12",
      "not Safari < 11"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
